                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="left"
                            android:padding="5dp"
                            android:background="#FAF3DD">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="AsignaciÃ³n:  "
                                android:fontFamily="@font/archivo_bold"
                                android:textColor="@color/black"
                                android:gravity="end"/>
                            <EditText
                                android:id="@+id/idDetailOrderAssignment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text|textMultiLine|none"
                                android:textSize="18sp"
                                android:gravity="top"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:padding="5dp"
                        android:background="#FAF3DD">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="TÃ©cnicos:  "
                            android:fontFamily="@font/archivo_bold"
                            android:textColor="@color/black"
                            android:gravity="end"/>
                        <EditText
                            android:id="@+id/idDetailOrderResponsable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text|textMultiLine|none"
                            android:textSize="18sp"
                            android:gravity="top"/>
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:padding="5dp"
                        android:background="#FAF3DD">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="LogÃ­stica:  "
                            android:fontFamily="@font/archivo_bold"
                            android:textColor="@color/black"
                            android:layout_weight="0.75"
                            android:gravity="end"/>
                        <EditText
                            android:id="@+id/idDetailOrderLigistic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text|textMultiLine|none"
                            android:textSize="18sp"
                            android:gravity="top"/>
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#E3F2FD">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="Observaciones:  "
                                android:textAlignment="center"
                                android:background="@color/blue"
                                android:fontFamily="@font/archivo_bold"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                            <EditText
                                android:id="@+id/idDetailOrderObservation"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:inputType="text|textMultiLine"
                                android:background="#ddd"
                                android:textSize="16dp"
                                android:gravity="top"
                                android:padding="10dp"
                                android:layout_weight="0.25"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/idDetailOrdenSignature"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:textSize="14dp"
                            android:text="Recibido por: "
                            android:textStyle="italic"
                            android:textColor="@color/black"
                            android:layout_weight="0.75"
                            android:gravity="end"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/idDetailOrderReceiveBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
