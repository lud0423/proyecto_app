        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:padding="10px"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">


                <LinearLayout
                    android:layout_width="191dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical|start"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_bold"
                        android:gravity="start"
                        android:text="     Orden NÂ°: "
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="" />

                    <TextView
                        android:id="@+id/idDetailOrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_bold"
                        android:text=" 0000000 "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical|end"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp">

                    <ImageButton
                        android:id="@+id/idDetailOrdenGoUpdate"
                        android:layout_width="40dp"
                        android:layout_height="42dp"
                        android:layout_marginRight="4dp"
                        android:background="#A0C0F8"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/idDetailOrdenGoDelete"
                        android:layout_width="40dp"
                        android:layout_height="52dp"
                        android:backgroundTint="#C81912"
                        android:padding="0dp"
                        android:text="X"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#000"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end|center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Prioridad:  "
                            android:textStyle=""
                            android:fontFamily="@font/archivo_bold"
                            android:textColor="@color/black"
                            android:gravity="end"/>
                        <TextView
                            android:id="@+id/idDetailPriority"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginStart="10dp">
                            <LinearLayout
                                android:id="@+id/idDetailPriorityColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/normal"
                                android:orientation="horizontal">
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="40px"
                        android:layout_marginBottom="20px"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Cliente:  "
                            android:fontFamily="@font/archivo_bold"
                            android:textColor="@color/black"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/idDetailOrderClient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/archivo_bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_marginTop="10dp"
                        android:weightSum="2.0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/archivo_bold"
                                android:gravity="end"
                                android:text="Lugar:  "
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/idDetailOrderPlace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="horizontal"
                            android:gravity="end|center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:text="Fecha: "
                                android:textStyle=""
                                android:fontFamily="@font/archivo_bold"
                                android:textColor="@color/black"
                                android:gravity="end"/>
                            <TextView
                                android:id="@+id/idDetailOrderDateInit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text=" 01/06/2022  "
                                android:textStyle=""
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
